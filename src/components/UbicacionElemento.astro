---
const { evento, hora, lugar, direccion, url } = Astro.props;
---

<div
    class="bg-black rounded-lg text-center text-white px-3 py-6 flex flex-col items-center"
>
    <div class="bg-white mb-5 opacity-15 rounded-full size-64">hola</div>
    <h1
        class="text-2xl xs:text-3xl sm:text-4xl md:text-3xl lg:text-3xl 2xl:text-4xl font-bold"
    >
        {evento}
    </h1>
    <h2 class="text-xl xs:text-2xl opacity-85 mb-8">{hora}</h2>
    <h2 class="text-xl xs:text-2xl sm.text-3xl font-bold mb-2">{lugar}</h2>
    <p
        class="text-sm font-bold text-pretty xs:text-lg md:text-base lg:text-lg opacity-90 flex-grow"
    >
        {direccion}
    </p>
    <a href={url} target="_blank" class="mt-8">
        <button
            type="button"
            class="bg-white text-black text-xl p-3 rounded-md"
        >
            Ver en el mapa
        </button>
    </a>
</div>
