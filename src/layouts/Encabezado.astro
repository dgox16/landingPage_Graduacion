---
import HatGraduation from "../svg/HatGraduation.astro";
---

<div class="h-screen relative" id="inicio">
    <img
        src="./imagenes/cover.avif"
        class="absolute inset-0 h-full w-full object-cover brightness-75"
        alt=""
    />
    <div class="absolute inset-0 flex items-end justify-center">
        <div
            class="w-[250px] xs:w-[360px] sm:w-[600px] lg:w-[800px] 2xl:w-[1200px] pb-28 flex items-center justify-center flex-col"
        >
            <HatGraduation />
            <h1
                class="text-3xl font-display xs:text-[2.4rem]/10 sm:text-7xl lg:text-8xl 2xl:text-2xl text-white font-black text-center font-pretty"
            >
                ¡ESTÁS INVITADO A MI GRADUACIÓN!
            </h1>
            <h2
                class="font-display text-lg xs:text-xl sm:text-3xl lg:text-4xl text-white font-semibold text-center opacity-95"
            >
                Te esperamos el 9 de Agosto<span class="hidden xs:inline">
                    del 2024</span
                >
            </h2>
            <a
                href="/#confirmarAsistencia"
                class="flex justify-center mt-6 sm:mt-9"
                ><button
                    class="bg-white px-3 py-2 rounded-md text-base xs:text-lg sm:text-xl font-medium font-display hover:scale-105 transition"
                    >Confirma tu asistencia</button
                ></a
            >
        </div>
    </div>
</div>
